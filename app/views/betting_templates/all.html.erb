<h1>Every Bet</h1>

<p> Feel free to take the otherside of your friend's bet </p>



<hr>

<table border="1">
  <tr>
    <th>Bettor</th>
    <th>Team Picked</th>
    <th>Opponent</th>
    <th>Spread</th>
    <th></th>
    
  </tr>

  <% @list_of_wagers.each do |bet| %>
  <tr>
    <td>
      <%=bet.bettor.username %>
    </td>

    <td>
      <%=bet.selected_team %>
    </td>

    <td>
      <%=bet.opponent %>
    </td>

    <td>
      <%=bet.spread %>
    </td>

    <td>
      <a href="/wager">
        Take the other side
      </a>
    </td>
  </tr>
  
  <% end %>
</table>
